{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": false,
    "outDir": "./",
  },
  "include": ["src/**/*.ts"],
  "exclude": [""]
}
